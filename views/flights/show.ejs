<%- include('../partials/header') %>

<section id="show-page">
  <div>Airport: </div>
  <div><%= flight.airport %></div>
  <div>departs: </div>
  <div><%= flight.departs %></div>
  <div>airline: </div>
  <div><%= flight.airline %></div>
  <div>Flight Number: </div>
  <div><%= flight.flightNo.join(', ') %></div>
  <div>Now Flying: </div>
  <div><%= flight.nowflying ? 'Yes' : 'Nope' %></div>
</section>

<!-- new markup below -->
<br><br><h2>Departs</h2>
<form id="add-depart-form" method="POST"
  action="/flights/<%= flight._id %>/destinations">
  <label>Depart:</label>
  <textarea name="content"></textarea>
  <label>Airport:</label>
  <select name="Airport">
    <option value="DFW">3</option>
    <option value="SAN">4</option>
    <option value="AUS" selected>5</option>
  </select>
  <input type="submit" value="Add Arrival">
</form>

<!-- // Create a list of reviews here -->
<% if (flight.destinations.length) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Depart</th>
        <th>Airport</th>
      </tr>
    </thead>
    <tbody>
      <% flight.destinations.forEach(function(r) { %>
        <tr>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.content %></td>
          <td><%= r.airport %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Departs Yet</h5>
<% } %>
<%- include('../partials/footer') %>